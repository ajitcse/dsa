class Solution{
    public:
    bool isMaxHeap(int arr[], int n)
    {
        for(int i=0;i<n;i++){
            
            int leftChild=2*i+1;
            int rightChild=2*i+2;
            
            if(arr[i]< arr[leftChild] || arr[i]<arr[rightChild]){
                return false;
            }
        }
        return true;
    }
};
